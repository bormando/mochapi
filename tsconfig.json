{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "CommonJS",
    "target": "ESNext",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "*": ["./src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"]
}
